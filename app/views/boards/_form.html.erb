<%= simple_form_for(board) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <h3 class="text-lg font-bold mt-5">Embeds</h3>

  <div class="my-2" data-controller="nested-rondo">
    <%= f.simple_fields_for :embeds do |embed| %>
      <%= render "embed_fields", f: embed %>
    <% end %>
    <div class="links">
      <%= link_to_add_association "Add Embed", f, :embeds %>
    </div>
  </div>
  
  <div class="form-actions mt-4">
    <%= f.button :submit %>
  </div>
<% end %>