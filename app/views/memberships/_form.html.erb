<%= simple_form_for(board_membership) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :user_id, collection: members_for_select(@board), label: 'Add member by email' %>
  </div>

  <div class="form-inputs" >
    <%= f.input :write_access, label: "Can add embed to board?" %>
  </div>

  <div class="mt-6">
    <%= f.button :submit, 'Save', data: {turbo_frame: "_top"} %>
  </div>
<% end %>