<div data-controller="modals">
  <template data-modal-target="template">
    <div class="mt-4 ml-4">
      <a href="#" data-action="modal#show" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded">Open Modal</a>
      <div data-modal-target="modal" data-action="click->modal#closeBackground" class="animated fadeIn fixed inset-0 overflow-y-auto flex items-center justify-center hidden" style="z-index: 99;">
        <!-- Modal Inner Container -->
        <div class="max-h-screen w-full max-w-lg relative">
          <!-- Modal Card -->
          <div class="m-1 bg-white rounded shadow">
            <div class="p-8">
              <h2 class="text-xl mb-4">Large Modal Content</h2>
              <p class="mb-4">This is an example modal dialog box.</p>

              <div class="flex justify-end items-center flex-wrap mt-6">
                <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" data-action="click->modal#hide">Close</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </template>
</div>